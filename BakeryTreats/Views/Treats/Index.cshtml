@{
  Layout = "_Layout";
}

@using BakeryTreats.Models;

<h1>Treats for @User.Identity.Name</h1>
<div class="container">

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 
else
{
  <h4>Name</h4>
  <hr/>
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
                @Html.ActionLink("Edit", "Edit", new { id = treat.TreatId }, new {@class = "btn btn-warning btn-sm"})
          @Html.ActionLink("Delete", "Delete", new { id = treat.TreatId }, new {@class = "btn btn-danger btn-sm"})
    }
  </ul>
}
<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>