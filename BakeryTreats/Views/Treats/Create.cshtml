@{
  Layout = "_Layout";
}

@model BakeryTreats.Models.Treat

<h4>Add a new Treat</h4>

<p>Go to @Html.ActionLink("this page", "Create", "Treats") to add a machine.</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  
  @* @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description) *@

  <input type="submit" value="Add Treat" class="btn btn-outline-primary" />
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>
