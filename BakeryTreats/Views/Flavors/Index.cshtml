@{
  Layout = "_Layout";
}

@using BakeryTreats.Models;

<h1>Flavors</h1>
<div class="container">
    @if (@Model.Count == 0)
    {
      <h3>No flavors have been added yet!</h3>
    }
    else
    {
     
  <h4>Name</h4>
  <hr/>
    @foreach (Flavor flavor in Model)
      {
        @Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })
      
          @Html.ActionLink("Edit", "Edit", new { id = flavor.FlavorId }, new {@class = "btn btn-warning"})
          @Html.ActionLink("Delete", "Delete", new { id = flavor.FlavorId }, new {@class = "btn btn-danger"})
      }
    }

  <br>
  
  <a href="Flavors/Create"><button type="button" class="btn btn-primary btn-sm">Add New Flavor</button></a>
  
  <a href="/"><button type="button" class="btn btn-primary btn-sm">Home</button></a>
</div>
